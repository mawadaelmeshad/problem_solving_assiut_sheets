#include <iostream>

using namespace std;

int main()
{
   long long n,mini,my;
   int i,pos;
   mini = 100001;
   cin>>n;
   long long k[n];
   for (i=1;i<=n;i++)
   {
       cin>>k[i];

       if(k[i]<mini){
        mini = min(mini,k[i]);
        pos=i;

       }

   }
   cout<<mini<<" "<<pos;


    return 0;
}
