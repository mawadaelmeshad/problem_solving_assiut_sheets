#include <iostream>
 
using namespace std;
 
int main()
{
  int n; cin>>n;
  for(int i=0;i<n;i++){
    int x,y,mini,maxi,sum;  sum=0;
    cin>>x;
    cin>>y;
    mini=min(x,y);
    maxi=max(x,y);
    for(int j=mini+1;j<maxi;j++){
        if(j%2!=0){
            sum=sum+j;
        }
    }
    cout<<sum<<endl;
  }
    return 0;
}
