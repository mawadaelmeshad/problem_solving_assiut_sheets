#include <iostream>
 
using namespace std;
inline void print_spaces(int n){
    for(int i=0;i<n;i++){
        std::cout<<" ";
    }
}
 
int main()
{
   int k;
   cin>>k;
   for (int i=1;i<=k;i++)
   {
         print_spaces(k-i);
       for(int j=1;j<= 2*i-1;j++)
       {
          cout<<"*";
       }
       cout<<endl;
   }
    return 0;
}
