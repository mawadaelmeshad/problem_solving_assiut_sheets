#include <iostream>
 
using namespace std;
 
int main()
{
    long long num,l,r,mini,maxi;
    cin>>num;
    for(int i=0;i<num;i++){
           long long sum =0;
            cin>>l>>r;
            mini=min(l,r);
            maxi=max(l,r);
      long long n=(maxi-mini+1);
      sum= n*(mini+maxi)/2;
 
        cout<<sum<<endl;
    }
    return 0;
}
